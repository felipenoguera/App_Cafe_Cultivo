<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:openDrawer="start">

    <include
        android:id="@+id/app_bar_main_desplegable"
        layout="@layout/app_bar_main_desplegable"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:onClick="Busqueda"

        app:headerLayout="@layout/nav_header_main_desplegable"
        app:menu="@menu/activity_main_drawer">

        <Button
            android:id="@+id/button_Metas"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/button_rounded_transparent"

            android:contentDescription="Buscador de usuarios"
            android:text="Metas"
            android:textAlignment="center"
            android:textSize="8sp" />

        <Button
            android:id="@+id/button_Contactos"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginTop="315dp"
            android:background="@drawable/button_rounded_transparent"

            android:contentDescription="Buscador de usuarios"
            android:text="Contactos"
            android:textAlignment="center"
            android:textSize="8sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="29dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/button_rounded_transparent"

            android:contentDescription="Buscador de usuarios"
            android:onClick="Busqueda"
            android:text="Buscar Usuarios"
            android:textAlignment="center"
            android:textSize="8sp" />

        <Button
            android:id="@+id/button_Reportes"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/button_rounded_transparent"

            android:contentDescription="Buscador de usuarios"
            android:text="Reportes"
            android:textAlignment="center"
            android:textSize="8sp" />
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>